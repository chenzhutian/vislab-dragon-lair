{
    "extends": "airbnb/base",
    "env": {
        "mocha": true
    },
    "globals": {
        "expect": true,
        "sinon": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    }
}